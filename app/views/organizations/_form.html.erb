<%= form_with(model: organization, url: employee_organizations_path, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, class:"font-bold" %><br />
    <%= form.text_field :name, class: "rounded-lg w-50 p-1", required: true  %>
  </div>

  <div class="flex items-center justify-end space-x-4">
    <%= form.submit 'Apply', class: 'submit-btn' %>
    <%= link_to 'Cancel', employee_organizations_path, class: 'cancel-btn' %>
  </div>  
<% end %>

<%= render 'shared/error_message', model: organization %>
