<div class="mt-20 ml-64 px-3 py-1">
  <div class="flex items-center justify-between">
    <p class="text-2xl font-bold">All Organizations</p>
    <%= link_to "Add Organization", new_employee_organization_path(current_user.id), class: 'custom-btn' %>
  </div>
  <hr class="my-4">

  <% headers = ['ID', 'Name'] %>

  <% rows = @organizations.each_with_index.map do |organization, index| 
    [
      { content: index + 1 },
      { content: organization.name }
    ]
  end %>

<%= render 'shared/records_table', headers: headers, rows: rows %>
</div>
  