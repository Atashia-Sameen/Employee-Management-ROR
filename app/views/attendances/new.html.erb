<div class="mt-20 ml-64 px-3 py-1">

  <div class="mb-6">
    <h2 class="text-2xl font-semibold text-gray-800">Mark Attendance</h2>
    <hr class="mt-2">
  </div>

  <%= form_with(model: @attendance, url: employee_attendances_path, local: true, class: "space-y-4") do |form| %>
    <div class="grid grid-cols-1 gap-6">
      <div>
        <%= form.label :day, "Day:", class: "block text-md font-medium text-gray-700" %>
        <%= form.text_field :date, value: @attendance.date.strftime('%A'), readonly: true, class: 'readonly-input-field' %>
      </div>
      <div>
        <%= form.label :date, "Date:", class: "block text-md font-medium text-gray-700" %>
        <%= form.text_field :date, value: @attendance.date, readonly: true, class: 'readonly-input-field' %>
      </div>
      <div class="flex items-center">
        <span class="text-gray-700 mr-2">Mark Present: </span>
        <%= form.check_box :status, { checked: @attendance.status == 'present' }, 'present', 'absent' %>
      </div>
    </div>

    <div class="flex justify-end space-x-4">
      <%= form.submit "Submit", class: 'inline-flex items-center p-2 text-md font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 cursor-pointer' %>
      <%= link_to "Cancel", employee_attendances_path, class: 'inline-flex items-center p-2 text-md font-medium rounded-md text-white bg-red-600 hover:bg-red-700' %>
    </div>
  <% end %>
</div>
