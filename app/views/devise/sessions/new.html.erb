<%= render "devise/shared/error_messages", resource: resource %>

<div class="max-w-md mx-auto bg-zinc-900 p-3 rounded-lg">
  <h2 class="text-2xl font-bold my-3 text-center uppercase">Log in</h2>

  <hr>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
    <div class="field my-2">
      <%= form.label :email %><br />
      <%= form.email_field  :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg", required: true %>
    </div>
  
    <div class="field mb-2">
      <%= form.label :password %><br />
      <%= form.password_field  :password, autocomplete: "current-password", class: "w-full rounded-lg", required: true %>
    </div>

    <%= render "devise/shared/links" %>
  
    <div class="actions flex justify-end">
      <%= form.submit "Log in", class: "custom-btn" %>
    </div>
  <% end %>
  
</div>